
    <script>
        $(document).ready(function() {
            $("img.isanswer").click(function(){
                $("#okmsg").show(500);
            })
            $("img.isnotanswer").click(function(){
                $("#errormsg").show(500).hide(2000)
            })
        });
    </script>

    <style>
        .single_answer
        {
            margin: 10px;
        }
        ima:hover
        {
            border: solid 1px ;
        }

        .word
        {
            font-size: 20px;
            color:Blue;
        }
       .text1
       {
           color:red;
       }
    </style>

    <div  class="col-md-4 col-md-offset-4" style="margin-top:10px;" >
      <div class="btn btn-default navbar-btn" id="errormsg" style="display:none; margin-top:30px">
        没有对~~ 在来一次吧！加油！fighting.....
      </div>
      <div  id="okmsg" class="btn btn-default navbar-btn" style="display:none; margin-top:30px">

        <% if @count <= @total-1 %>
            <a  href='/demo2/index?t_id=2&q_id=<%= @count+1 %>&q_type=0'> Yeah!对了，我们进入下一步吧！～～   </a>
        <% else %>
            <a  href='/demo2/index?t_id=2&q_id=0&q_type=<%=@q_type+1 %>'>Yeah!对了，我们进入下一步吧！～～</a>
        <% end %>
      </div>


    </div>
    <div class="col-md-8 col-md-offset-2" style="margin-top:20px;" >
      <span class="text1">请选择与下面单词最匹配的图片~~</span><br>
    </div>
    <hr>
    <div class="col-md-8 col-md-offset-2" style="margin-top:30px;background: linen" >

      <div class="col-md-3" style="margin-top:20px;" >
        <span class="word">
            <%= question.text%>
       </span>
      </div>

      <div id="answerdiv" class="col-md-9" style="margin-top:10px;" >
        <% answers.each do |answer|  %>
            <div class="col-md-6" style="background:linen">
              <% if answer.isright == true %>
               <img class="single_answer isanswer" width="160" height="160" src='/images/topic/<%= answer.gif %>'>
              <% else %>
                  <img class="single_answer isnotanswer" width="160" height="160" src='/images/topic/<%= answer.gif %>'>
              <% end %>
            </div>
        <% end %>
      </div>
</div>