
<div class="panel panel-default">
  <div class="panel-heading">
    <span class="label label-success">答案列表:</span>
    <span class="label label-success"><%=link_to '添加答案',:action => 'new' %></span>
    <%=link_to '问题列表' ,:controller => 'question1s',:action => 'index'%>
  </div>
  <div class="panel-body">
        <table class="table">
          <tr>
            <th>id</th>
            <th>tag</th>
            <th>english</th>
            <th>chinese</th>
            <th>wiki</th>
            <th>audio</th>
            <th>image</th>
            <th>操作</th>
            <th>操作</th>
            <th>操作</th>
          </tr>
            <%@answer1s.each do |answer|%>
                <%=render :partial => 'single',:locals => {:answer => answer}%>
                <td><%=link_to 'show',:action => 'show',:id=>answer.id %></td>
               <td><%=link_to 'edit',:action => 'edit',:id=>answer.id %></td>
               <td><%=link_to 'destroy',{:action => 'destroy',:id=>answer.id},class:"destroy" %></td>
              </tr>
            <%end%>
        </table>
    </div>
</div>

