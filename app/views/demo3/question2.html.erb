                $td = $("<td id='"+idprefix+position+"'  ondrop='drop(event)' ondragover='allowDrop(event)'></td>");
                $tr.append($td);
                count+=1;
            }
            $t_body.append($tr);

        }

        $("#"+divid).append($t_body);
    }


    function renderContent()
    {
        var contents = window.json[0].part2.contents;
        var length = contents.length;
        var $tds = $("#table1 td");
        var count = 0;

        for (var i = 0; i < length; i++) {
            content = getSquare(i);
            var x = content.x;
            var y = content.y;
            var id = "a" + x + "" + y;


            var type = content.type
            if (type == "text")
            {
                var id = "from"+x+y;
                var innercontent = "<div class='tddivcontent' draggable='true' ondragstart='drag(event)' id="+id+" >";
                $td = $tds[count++];
                innercontent += "<span>" + content.text + "</span>";
                innercontent+="</div>";
                $($td).html(innercontent);
             }
        }
    }

    /* get the group json and save it to window.groups

    {
       groupid1:["00","11","12"],
       groupid2:["33","44"];
    }
    */

    function parsegroups()
    {
        window.groups = {};
        window.currentgroup = 0;

        var contents = window.json[0].part2.contents;
        var length = contents.length;

        var count = 0;

        for (var i = 0; i < length; i++) {
            var content = getSquare(i);
            var groups = content.group;

            if (groups == undefined || groups == null)
                continue;

            var gs = groups.split(",");

            var x = content.x;
            var y = content.y;
            var id = x + "" + y;

            for(var c = 0; c < gs.length; c++)
            {
                var key = gs[c];
                if( window.groups[key] == undefined || window.groups[key] == null)
                {
                    window.groups[key] = [];
                }
                var ithgroup = window.groups[key];
                ithgroup.push(id);
            }
        }
    }

    // get group according to groupid
    function getgroup(groupid)
    {
        return window.groups[groupid];
    }

    // active gourp by set them to different color;
    function activeGroup(groupid)
    {
        var group = getgroup(groupid);
        for (i = 0;i < group.length; i++)
        {
            var id = group[i];

            var $left = $("#from"+id);
            $left.animate({fontSize:'22px'},"slow");
            $left.animate({fontSize:'18px'},"slow");
            $left.css("color","green");
            //$left.css("border","solid 5px red");
            var $right = $("#"+id);
            $right.find("img").show();
            $right.css("border","solid 3px red");
        }

    }

    // render the pointer vim in the table2
    function renderPointer()
    {
        var contents = window.json[0].part2.contents;
        var length = contents.length;

        for (var i = 0; i < length; i++)
        {
            content = getSquare(i);
            var x = content.x;
            var y = content.y;
            var id = x+""+y;

            var innercontent = "<div class='tddiv'>";
            var type = content.type

            if( type == "pointer")
            {
                var picture = content.picture;
                picture = imgbase+picture+".png";
                innercontent += "<img src='"+picture+"'>";
            }
            else if( type == "link")
                innercontent += content.text;

            innercontent+="</div>";
            $("#"+id).html(innercontent);
            $("#"+id).attr("class","pointer");
        }
    }

    function addDragDropAction()
    {
//        var $tds = $("#table2 td").not(".pointer");
//        $tds.on("drop","drop(event)");
