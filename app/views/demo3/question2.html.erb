    // create a table with tableid
    // and set its prefix id of td to diprefix
    // and
    function renderTable(idprefix,tableid,divid,width, height)
    {
        var $t_body =  $("<table border=1 id='"+tableid+"'></table>");
        var count = 0;
        for(var i = 0;i < height; i++)
        {
            var $tr = $("<tr></tr>");
